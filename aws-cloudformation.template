                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 443,
                        "ToPort": 443,
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        },
        "Ec2InstanceRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                      {
                        "Effect": "Allow",
                        "Principal": {
                          "Service": "ec2.amazonaws.com"
                        },
                        "Action": "sts:AssumeRole"
                      }
                    ]
                },
                "Policies" : [
		    {
			"PolicyName" : { "Fn::Join" : [ "-", [ { "Ref" : "AWS::StackName" }, "autostop" ] ] },
			"PolicyDocument" : {
			    "Version": "2012-10-17",
			    "Statement": [
				{
				    "Effect": "Allow",
				    "Action": [
					"ec2:StopInstances"
				    ],
				    "Resource": "*"
				}
			    ]
			}
		    }
		]
	    }
	},
	"Ec2InstanceProfile": {
	    "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
		"Roles" : [ { "Ref": "Ec2InstanceRole" } ]
	    }
	},
